@model IEnumerable<Odonto.Models.PatientRecordProcedure>

@if (Model != null && Model.Any())
{
	<div class="card">
		<div class="card-body">
			<div class="show-record">
				<h3 class="m-t-5">Procedimentos</h3>
				<hr>
				<div class="table-responsive m-t-20">
					<table id="myTable" class="table table-bordered table-striped">
						<thead>
							<tr>
								<th width="10%" class="text-center">Data</th>
								<th>Procedimento Realizado</th>
								<th width="15%" class="text-center">Dentista</th>
								<th width="15%" class="text-center">Valor</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model)
							{
								<tr>
									<td class="text-center">@item.Date.ToShortDateString()</td>
									<td>@item.ProcedureLabel</td>
									<td class="text-center">@item.DentistName</td>
									<td class="text-center">@item.Value.ToString("C", new System.Globalization.CultureInfo("pt-BR"))</td>
								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
}
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
	Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				...
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>

<script src="~/js/lib/bootstrap/js/bootstrap.min.js"></script>
