@model IEnumerable<Odonto.Models.User>
@{
	ViewData["Title"] = "Listar Dentistas";
}

<div class="col-md-12">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Dentistas</h4>
			<div class="table-responsive m-t-20">
				<table id="myTable" class="table table-bordered table-striped">
					<thead>
						<tr>
							<th>E-mail</th>
							<th width="20%" class="text-center hidden-sm-down">Tipo</th>
							<th width="10%" class="text-center"></th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Email</td>
								<td class="text-center hidden-sm-down">@item.TypeName</td>
								<td class="text-center">
									<a title="Editar" class="text-warning" asp-action="Edit" asp-controller="User" asp-route-id="@item.ID"><i class="fa fa-pencil fa-lg"></i></a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
